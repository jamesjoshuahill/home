[alias]
	a = add
	ap = a -p
	b = branch -vv
	ba = b -a
	c = commit
	ca = c --amend
	cp = cherry-pick
	d = diff
	ds = d --staged
	f = fetch
	l = log --pretty=coloured
	la = l --all --graph
	p = push
	pu = !git p --set-upstream origin "$(git branch --show-current)"
	pf = p --force-with-lease
	pl = pull --rebase
	re = remote -v
	r = restore
	rp = r -p
	rs = r --staged
	rsp = rs -p
	rb = rebase
	s = status
	st = status
	sw = switch
[commit]
	verbose = true
[credential]
	helper = osxkeychain
[pretty]
	coloured = format:%C(auto)%h%d %s %C(green)(%cr) %C(cyan)%an
[user]
	name = Josh Hill
	email = jamesjoshuahill@users.noreply.github.com

# git-delta
[core]
	pager = delta --keep-plus-minus-markers --theme=Dracula
[interactive]
	diffFilter = delta --color-only --theme=Dracula

# git-co-author
[commit]
	template = ~/.config/git/commit-template
[co-authors]
	jh = Josh Hill <jamesjoshuahill@users.noreply.github.com>
